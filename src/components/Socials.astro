---
import { Link } from 'astro-link'
---

<div class="flex flex-col w-full lg:justify-around items-center justify-center text-center gap-4">
  <div class="flex w-1/2 lg:justify-around justify-center">
    <h1 class="text-2xl lg:text-2xl w-full font-extrabold">My Socials</h1>
  </div>
  <div class="social-icons flex  w-1/2 justify-around">
    <Link
      href="https://github.com/diegorramos84"
      title="Github"
      externalInNewTab={true}
      class="social-icon"
    >
      <i class="devicon-github-original text-2xl lg:text-3xl hover:text-greenish"></i>
    </Link>

    <Link
      href="www.linkedin.com/in/diegorramos84"
      title="Linkedin"
      externalInNewTab={true}
      class="social-icon"
    >
      <i class="devicon-linkedin-plain text-2xl lg:text-3xl hover:text-greenish"></i>
    </Link>

    <Link
      href="https://twitter.com/DIERRamos84"
      title="Twitter"
      externalInNewTab={true}
      class="social-icon"
    >
      <i class="devicon-twitter-original text-2xl lg:text-3xl hover:text-greenish"></i>
    </Link>
  </div>

</div>
